<div class="row">

  <div class="col-md-5">
    <table class="table table-striped table-hover ">
      <tr>
        <th>Name</th>
        <th>Company</th>
        <th>Position</th>
      </tr>
      <% for (let contact of contacts) { %>
        <% let {contact_name, company_name, position, student_id, id} = contact %>
        <tr>
          <td><a href="/contacts?student_id=<%= student_id %>&contact_id=<%= id %>"><%= contact_name %></a></td>
          <td><%= company_name %></td>
          <td><%= position %></td>
        </tr>
      <% } %>
    </table>
  </div>

  <div class="col-md-1"></div>

  <div class="col-md-6">
    <% if (selectedContact) { %>
      <% let {first_name, last_name, email, company_name, position, date_meeting, meeting, synopsis, follow_up} = selectedContact %>
      <% let full_name = first_name + ' ' + last_name %>
      <h4><%= full_name %></h4>
      <div class="row">
        <div class="col-md-4">Company</div>
        <div class="col-md-8"><%= company_name %></div>
      </div>
      <div class="row">
        <div class="col-md-4">Position</div>
        <div class="col-md-8"><%= position %></div>
      </div>
      <div class="row">
        <div class="col-md-4">E-Mail</div>
        <div class="col-md-8"><%= email %></div>
      </div>
      <div class="row">
        <div class="col-md-4">Date Meeting</div>
        <div class="col-md-8"><%= date_meeting %></div>
      </div>
      <div class="row">
        <div class="col-md-4">Meeting</div>
        <div class="col-md-8"><%= meeting %></div>
      </div>
      <div class="row">
        <div class="col-md-4">Synopsis</div>
        <div class="col-md-8"><%= synopsis %></div>
      </div>
      <div class="row">
        <div class="col-md-4">Follow-up</div>
        <div class="col-md-8"><%= follow_up %></div>
      </div>
    <% } %>
  </div>

</div>
